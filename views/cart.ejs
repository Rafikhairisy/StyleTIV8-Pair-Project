<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        table {
            width: 100%;
        }
        th,
        td {
            padding: 10px;
            text-align: center;
        }
        .quantity-input {
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .quantity-input input {
            width: 40px;
            text-align: center;
            margin: 0 5px;
        }
        .btn-group {
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .btn-group button {
            margin: 0 5px;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/home">Styletiv8</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/home">All Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Categories</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout" style="color: green;">Logout</a>
                    </li>
                </ul>
                <form class="d-flex" role="search">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>

    <div class="container">
        <h1>Cart</h1>
        <table>
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Product Name 1</td>
                    <td>
                        <div class="quantity-input">
                            <div class="btn-group">
                                <button class="btn btn-sm btn-secondary quantity-minus">-</button>
                            </div>
                            <input type="number" value="1" id="quantity-1">
                            <div class="btn-group">
                                <button class="btn btn-sm btn-secondary quantity-plus">+</button>
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>Product Name 2</td>
                    <td>
                        <div class="quantity-input">
                            <div class="btn-group">
                                <button class="btn btn-sm btn-secondary quantity-minus">-</button>
                            </div>
                            <input type="number" value="2" id="quantity-2">
                            <div class="btn-group">
                                <button class="btn btn-sm btn-secondary quantity-plus">+</button>
                            </div>
                        </div>
                    </td>
                </tr>

            </tbody>
        </table>
        <div class="text-center mt-4">
            <h3>Total: RpXXX.XX</h3>
            <button class="btn btn-primary">Checkout</button>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-p+VeFUTQKou8ixi6CNivxVBOtOp3vYYCFLvCjypjwYU5z9bRT7bwmL/sCXxf00Br" crossorigin="anonymous">

            const quantityMinusButtons = document.querySelectorAll('.quantity-minus');
            const quantityPlusButtons = document.querySelectorAll('.quantity-plus');

            quantityMinusButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const input = button.parentNode.nextElementSibling;
                    if (input.value > 0) {
                        input.value = parseInt(input.value) - 1;
                    }
                });
            });

            quantityPlusButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const input = button.parentNode.previousElementSibling;
                    input.value = parseInt(input.value) + 1;
                });
            });
        </script>
</body>

</html>